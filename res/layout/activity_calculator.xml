<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shreevardhan.onlineexam.Calculator">

    <Button
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:background="#6995f4"
        android:id="@+id/button14"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText7"
        android:layout_below="@+id/button14"
        android:layout_marginTop="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#f7bebe"
        android:inputType="numberSigned|numberDecimal"
        android:hint="FIRST NUMBER"
        android:gravity="center"
        android:textSize="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText8"
        android:layout_below="@+id/editText7"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignEnd="@+id/editText7"
        android:background="#f7bebe"
        android:inputType="numberSigned|numberDecimal"
        android:gravity="center"
        android:hint="SECOND NUMBER"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText8"
        android:layout_alignEnd="@+id/editText8"
        android:inputType="number"
        android:background="#d3fabb"
        android:gravity="center"
        android:hint="RESULT"
        android:textSize="25dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="46dp"
        android:id="@+id/linearLayout">
        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="+"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/button15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="-"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/button16"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="x"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/button17"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:gravity="center" />

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="/"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/button18"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="72dp"
            android:gravity="center" />


    </LinearLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="RESET"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/button19"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
